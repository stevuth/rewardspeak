
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow authenticated users to read offers and offer walls
    match /offers/{offerId} {
      allow read: if request.auth != null;
    }

    match /offer-walls/{wallId} {
      allow read: if request.auth != null;
    }

    // Leaderboard is public
    match /leaderboard/{entryId} {
      allow read: if true;
    }

    // Users should only be able to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/withdrawals/{withdrawalId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/activity/{activityId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
